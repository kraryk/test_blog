<p>
  <strong>Title:</strong>
  <%= @post.title %>
</p>

<p>
  <strong>Body:</strong>
  <%= @post.body %>
</p>

<%= link_to 'Back', posts_path %>
<% if current_user && current_user.editor? %> 
	<%= link_to 'Edit', edit_post_path(@post) %> |
	<%= link_to 'Destroy', @post, method: :delete, data: { confirm: 'Are you sure?' } %>
<% end %>

<h2>Comments</h2>
<%= render @post.comments %>
<h2>Add a comment:</h2>
<%= render 'comments/form' %>

