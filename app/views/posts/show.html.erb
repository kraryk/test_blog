<p>
  <strong>Title:</strong>
  <%= @post.title %>
</p>
<%= image_tag(@post.picture_url, :width => 600) if @post.picture.present? %>

<p>
  <strong>Body:</strong>
  <%= @post.body %>
</p>

<%= link_to 'Back', posts_path %>
<%= link_to 'Edit', edit_post_path(@post) %> |
<%= link_to 'Destroy', @post, method: :delete, data: { confirm: 'Are you sure?' } %>

